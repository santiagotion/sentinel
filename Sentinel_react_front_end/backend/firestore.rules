rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Keywords collection - allow users to add/edit/delete keywords
    match /keywords/{keywordId} {
      allow read: if true;
      allow write: if true; // Allow frontend to manage keywords
    }
    
    // Twitter posts collection - only backend can write
    match /twitterPosts/{postId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Analytics collection - only backend can write
    match /analytics/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Configuration collection - allow frontend to read/write config
    match /config/{configId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Allow all other reads for development
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}